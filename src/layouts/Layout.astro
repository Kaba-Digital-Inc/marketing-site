---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="Kaba Digital Inc. - Transform your digital future with our expert solutions in UX Design, AI Workflows, Cloud Consulting, and SEO Optimization." />
    <meta name="keywords" content="digital transformation, UX design, AI solutions, cloud consulting, SEO optimization" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Transform your digital future with Kaba Digital Inc." />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-EY38M8ZEBX"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-EY38M8ZEBX');
    </script>
    <link rel="canonical" href="https://kabadigital.com" />
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>